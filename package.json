{
  "name": "solid-chat",
  "version": "0.0.12",
  "description": "Modern chat panes for Solid pods - longChatPane and chatListPane",
  "type": "module",
  "main": "src/index.js",
  "module": "src/index.js",
  "bin": "bin/cli.js",
  "exports": {
    ".": "./src/index.js",
    "./longChatPane": "./src/longChatPane.js",
    "./chatListPane": "./src/chatListPane.js"
  },
  "files": [
    "src/",
    "bin/",
    "index.html",
    "icons/",
    "manifest.json"
  ],
  "scripts": {
    "start": "npx serve .",
    "dev": "npx serve . -p 8080",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "peerDependencies": {
    "rdflib": ">=2.2.0"
  },
  "keywords": [
    "solid",
    "chat",
    "decentralized",
    "messaging",
    "rdf",
    "linked-data",
    "pane"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/solid-chat/app.git"
  },
  "bugs": {
    "url": "https://github.com/solid-chat/app/issues"
  },
  "homepage": "https://solid-chat.com",
  "author": "Solid Chat Contributors",
  "license": "AGPL-3.0",
  "dependencies": {
    "open": "^10.1.0"
  },
  "devDependencies": {
    "jsdom": "^27.4.0",
    "vitest": "^4.0.16"
  }
}
